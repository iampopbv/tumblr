<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="65dp"
        android:layout_weight="97"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvWaar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="In welke ruimte bevind zich de klacht?" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="99" >

            <RadioButton
                android:id="@+id/rbWoonkamer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Woonkamer" />

            <RadioButton
                android:id="@+id/rbKeuken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rbWoonkamer"
                android:layout_below="@id/rbWoonkamer"
                android:text="Keuken" />

            <RadioButton
                android:id="@+id/rbGang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rbWoonkamer"
                android:layout_below="@id/rbKeuken"
                android:text="Gang" />

            <RadioButton
                android:id="@+id/rbTrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rbWoonkamer"
                android:layout_below="@id/rbGang"
                android:text="Trap" />

            <RadioButton
                android:id="@+id/rbSlaapkamer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rbWoonkamer"
                android:layout_below="@id/rbTrap"
                android:text="Slaapkamer" />

            <RadioButton
                android:id="@+id/rbBadkamer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rbWoonkamer"
                android:layout_below="@id/rbSlaapkamer"
                android:text="Badkamer" />

            <RadioButton
                android:id="@+id/rbToilet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rbWoonkamer"
                android:layout_below="@id/rbBadkamer"
                android:text="Toilet" />

            <RadioButton
                android:id="@+id/rbBerging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rbWoonkamer"
                android:layout_below="@id/rbToilet"
                android:text="Berging" />

            <RadioButton
                android:id="@+id/rbTechnischeRuimte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rbWoonkamer"
                android:layout_below="@id/rbBerging"
                android:text="Technische ruimte" />

            <RadioButton
                android:id="@+id/rbBalkon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rbWoonkamer"
                android:layout_below="@id/rbTechnischeRuimte"
                android:text="Balkon" />

            <RadioButton
                android:id="@+id/rbOverig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rbWoonkamer"
                android:layout_below="@id/rbBalkon"
                android:text="Overig" />
        </RelativeLayout>
    </LinearLayout>
    <!-- This is for the buttons that are visable in every step -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivUnderline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/underline" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bPage1"
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_step1selected" />

            <Button
                android:id="@+id/bPage2"
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_step2lock" />

            <Button
                android:id="@+id/bPage3"
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_step3lock" />

            <Button
                android:id="@+id/bForward"
                android:layout_width="122dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_volgende" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>