<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background" >

    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="90dp" >



    </LinearLayout>
    -->

    <EditText
        android:id="@+id/etWachtwoord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etGebruikersnaam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Wachtwoord"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etGebruikersnaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="Gebruikersnaam" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/etGebruikersnaam"
        android:layout_below="@+id/etWachtwoord"
        android:layout_marginTop="53dp"
        android:text="Log in" />

    <TextView
        android:id="@+id/tvTRegistreren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvWWVergeten"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:text="Toch registreren?"
        android:textColor="#0000FF" />

    <TextView
        android:id="@+id/tvWWVergeten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTRegistreren"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:text="Wachtwoord vergeten?"
        android:textColor="#0000FF" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:gravity="center_horizontal"
        android:text="Log in"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>